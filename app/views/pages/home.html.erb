<div class="main-container flex-column">
  <h1 class="text-centered">Get to work!</h1>
  <div class="countdown-timer">
    <div class="base-timer">
      <svg class="base-timer__svg" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <g class="base-timer__circle">
          <circle class="base-timer__path-elapsed" cx="50" cy="50" r="45" />
          <path
            id="base-timer-path-remaining"
            stroke-dasharray="283"
            class="base-timer__path-remaining green"
            d="
              M 50, 50
              m -45, 0
              a 45,45 0 1,0 90,0
              a 45,45 0 1,0 -90,0
            "
          ></path>
        </g>
      </svg>
      <div id="base-timer-label" class="base-timer__label">
        <span class="minutes">25</span> :
        <span class="seconds">00</span>
      </div>
    </div>
  </div>
  <div class="controls">
    <div class="controls-left">
      <span id="stop" class="button">
        Stop
      </span>
    </div>
    <div class="controls-right">
      <span id="start" class="button">
        Start
      </span>
      <span id="pause" class="button hide-control">
        Pause
      </span>
    </div>
  </div>
</div>
